<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reports & Analytics | Inventory System</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root { --purple-theme: #5d3fd3; --bg-light: #f8f9fc; --text-main: #4e5154; --text-muted: #6e707e; }
        body { background-color: var(--bg-light); font-family: 'Inter', sans-serif; font-size: 14px; color: var(--text-main); display: flex; margin: 0; }
        
        /* Sidebar Styling */
        .sidebar { width: 260px; height: 100vh; background: #fff; position: fixed; border-right: 1px solid #eee; padding-top: 20px; }
        .sidebar-brand { padding: 0 25px 30px; }
        .sidebar-brand h5 { font-size: 18px; font-weight: 700; color: var(--purple-theme); margin: 0; }
        .nav-link { color: var(--text-muted); padding: 12px 25px; display: flex; align-items: center; text-decoration: none; font-weight: 500; border-radius: 0 50px 50px 0; margin-right: 15px; }
        .nav-link i { margin-right: 15px; width: 20px; text-align: center; font-size: 1.1rem; }
        .nav-link.active { background: var(--purple-theme); color: white !important; }

        /* Main Content Styling */
        .header-container { margin-left: 260px; width: calc(100% - 260px); }
        .top-nav { height: 70px; background: white; display: flex; align-items: center; justify-content: space-between; padding: 0 40px; border-bottom: 1px solid #eee; }
        .main-content { padding: 30px 40px; }

        .card { border: none; border-radius: 12px; box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.05); background: white; margin-bottom: 20px; padding: 20px; }
        .stat-label { font-size: 12px; color: var(--text-muted); font-weight: 600; margin-bottom: 10px; }
        .stat-value { font-size: 24px; font-weight: 700; color: #333; }
        
        .btn-export { font-size: 12px; font-weight: 500; padding: 6px 15px; border-radius: 8px; border: 1px solid #dee2e6; background: white; color: #4e5154; }
        .report-tabs .btn { font-size: 13px; border-radius: 20px; padding: 5px 15px; margin-right: 8px; border: 1px solid #eee; }
        .btn-active { background: #f4f0ff; color: var(--purple-theme); border-color: var(--purple-theme) !important; }
    </style>
</head>
<body>

<div class="sidebar">
    <div class="sidebar-brand"><h5>Inventory & Sales</h5><small class="text-muted">Management System</small></div>
    <nav class="nav flex-column">
        <a href="/" class="nav-link"><i class="bi bi-grid-fill"></i> Dashboard</a>
        <a href="/products" class="nav-link"><i class="bi bi-box-seam"></i> Products</a>
        <a href="/suppliers" class="nav-link"><i class="bi bi-truck"></i> Suppliers</a>
        <a href="/pos" class="nav-link"><i class="bi bi-cart3"></i> POS</a>
        <a href="/inventory" class="nav-link"><i class="bi bi-house-door"></i> Inventory</a>
        <a href="/barcode" class="nav-link"><i class="bi bi-qr-code-scan"></i> Barcode Scanner</a>
        <a href="/transactions" class="nav-link"><i class="bi bi-file-earmark-text"></i> Transactions</a>
        <a href="/reports" class="nav-link active"><i class="bi bi-graph-up-arrow"></i> Reports</a>
        <a href="/users" class="nav-link"><i class="bi bi-people"></i> Users</a>
    </nav>
</div>

<div class="header-container">
    <div class="top-nav">
        <div>
            <h5 class="mb-0 fw-bold">Reports & Analytics</h5>
            <small class="text-muted" style="font-size: 12px;">View detailed reports and analytics</small>
        </div>
        <div class="d-flex gap-2">
            <button class="btn-export"><i class="bi bi-file-earmark-pdf me-1"></i> Export PDF</button>
            <button class="btn-export"><i class="bi bi-download me-1"></i> Export Excel</button>
        </div>
    </div>

    <div class="main-content">
        <div class="report-tabs mb-4">
            <button class="btn btn-active">Sales Report</button>
            <button class="btn">Inventory Report</button>
            <button class="btn">Top Products</button>
        </div>

        <div class="card">
            <h6 class="fw-bold mb-4" style="font-size: 14px;">Sales by Date</h6>
            <canvas id="reportsChart" height="100"></canvas>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="stat-label">Total Revenue</div>
                    <div class="stat-value"><%= stats.totalRevenue %></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="stat-label">Total Transactions</div>
                    <div class="stat-value"><%= stats.totalTransactions %></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="stat-label">Average Order Value</div>
                    <div class="stat-value"><%= stats.avgOrderValue %></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const ctx = document.getElementById('reportsChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['12/22', '12/23', '12/24', '12/25', '12/26', '12/27', '12/28'],
            datasets: [{
                label: 'Sales ($)',
                data: [1200, 1700, 950, 1350, 2150, 1950, 2200],
                borderColor: '#5d3fd3',
                backgroundColor: 'rgba(93, 63, 211, 0.05)',
                fill: true,
                tension: 0.4,
                pointRadius: 5,
                pointBackgroundColor: '#5d3fd3'
            }]
        },
        options: {
            plugins: { legend: { display: false } },
            scales: {
                y: { beginAtZero: true, grid: { borderDash: [5, 5] } },
                x: { grid: { display: false } }
            }
        }
    });
</script>
</body>
</html>