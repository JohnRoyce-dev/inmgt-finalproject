<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | Inventory & Sales</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        :root { 
            --purple-theme: #5d3fd3; 
            --bg-light: #f8f9fc;
            --text-main: #4e5154;
            --text-muted: #6e707e;
            --font-size-standard: 14px;
        }

        body { 
            background-color: var(--bg-light); 
            font-family: 'Inter', sans-serif; 
            font-size: var(--font-size-standard);
            color: var(--text-main);
            margin: 0; 
            display: flex; 
        }

        .sidebar { 
            width: 260px; 
            height: 100vh; 
            background: #fff; 
            position: fixed; 
            border-right: 1px solid #eee; 
            padding-top: 20px; 
            z-index: 1000; 
        }
        .sidebar-brand { padding: 0 25px 30px; }
        .sidebar-brand h5 { font-size: 18px; font-weight: 700; color: var(--purple-theme); }

        .nav-link { 
            color: var(--text-muted); 
            padding: 12px 25px; 
            display: flex; 
            align-items: center; 
            text-decoration: none; 
            font-size: var(--font-size-standard); 
            font-weight: 500;
            border-radius: 0 50px 50px 0; 
            margin-right: 15px; 
            transition: 0.2s;
        }
        .nav-link i { margin-right: 15px; width: 20px; text-align: center; font-size: 1.1rem; }
        .nav-link:hover { color: var(--purple-theme); background: #f4f0ff; }
        .nav-link.active { background: var(--purple-theme); color: white !important; }

        .header-container { margin-left: 260px; width: calc(100% - 260px); }
        .top-nav { 
            height: 70px; 
            background: white; 
            display: flex; 
            align-items: center; 
            justify-content: space-between; 
            padding: 0 40px; 
            border-bottom: 1px solid #eee; 
        }
        .main-content { padding: 40px; }

        .card { border: none; border-radius: 15px; box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.05); background: white; margin-bottom: 20px; }
        .stat-card { padding: 25px; }
        .stat-label { font-size: 13px; color: var(--text-muted); font-weight: 500; margin-bottom: 8px; }
        .stat-value { font-size: 26px; font-weight: 700; color: #333; }

        .alert-item { 
            background: white; 
            padding: 15px 20px; 
            border: 1px solid #edf2f9; 
            border-radius: 12px; 
            margin-bottom: 12px; 
            display: flex; 
            justify-content: space-between; 
            align-items: center; 
        }
        .alert-info .p-name { font-weight: 600; font-size: 14px; display: block; }
        .alert-info .p-cat { font-size: 12px; color: var(--text-muted); }
    </style>
</head>
<body>

<div class="sidebar">
    <div class="sidebar-brand">
        <h5 class="mb-0">Inventory & Sales</h5>
        <small class="text-muted">Management System</small>
    </div>
    <nav class="nav flex-column">
        <a href="/" class="nav-link active"><i class="bi bi-grid-fill"></i> Dashboard</a>
        <a href="/products" class="nav-link"><i class="bi bi-box-seam"></i> Products</a>
        <a href="/suppliers" class="nav-link"><i class="bi bi-truck"></i> Suppliers</a>
        <a href="/pos" class="nav-link"><i class="bi bi-cart3"></i> POS</a>
        <a href="/inventory" class="nav-link"><i class="bi bi-house-door"></i> Inventory</a>
        <a href="/barcode" class="nav-link"><i class="bi bi-qr-code-scan"></i> Barcode Scanner</a>
        <a href="/transactions" class="nav-link"><i class="bi bi-journal-text"></i> Transactions</a>
        <a href="/reports" class="nav-link"><i class="bi bi-graph-up-arrow"></i> Reports</a>
        <a href="/users" class="nav-link"><i class="bi bi-people"></i> Users</a>
    </nav>
</div>

<div class="header-container">
    <div class="top-nav">
        <h5 class="mb-0 fw-bold" style="font-size: 18px;">Dashboard</h5>
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted" style="font-size: 13px;">Welcome, <strong>System Admin</strong></span>
            <a href="/logout" class="btn btn-sm btn-outline-secondary px-3" style="font-size: 12px;">Logout</a>
        </div>
    </div>

    <div class="main-content">
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card stat-card">
                    <div class="stat-label text-muted">Total Products</div>
                    <div class="stat-value"><%= stats.total_products %></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card">
                    <div class="stat-label text-muted">Low Stock Items</div>
                    <div class="stat-value text-danger"><%= stats.low_stock %></div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-7">
                <div class="card p-4">
                    <h6 class="fw-bold mb-4" style="font-size: 14px;">Sales Overview</h6>
                    <canvas id="salesChart" height="220"></canvas>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card p-4">
                    <h6 class="fw-bold mb-4" style="font-size: 14px;">Stock by Category</h6>
                    <canvas id="categoryChart" height="220"></canvas>
                </div>
            </div>
        </div>

        <h6 class="fw-bold mb-3" style="font-size: 14px;">Low Stock Alerts</h6>
        <% products.filter(p => p.stock_quantity < 10).forEach(product => { %>
        <div class="alert-item">
            <div class="alert-info">
                <span class="p-name"><%= product.product_name %></span>
                <span class="p-cat"><%= product.category %></span>
            </div>
            <div class="d-flex align-items-center gap-3">
                <span class="badge bg-danger rounded-pill px-3" style="font-size: 11px;"><%= product.stock_quantity %> left</span>
                <small class="text-muted" style="font-size: 11px;">Threshold: 10</small>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<script>
    new Chart(document.getElementById('salesChart'), {
        type: 'line',
        data: {
            labels: ['12/22', '12/23', '12/24', '12/25', '12/26', '12/27', '12/28'],
            datasets: [{
                label: 'Revenue',
                data: [1200, 1700, 900, 1300, 2100, 1900, 2300],
                borderColor: '#5d3fd3',
                backgroundColor: 'rgba(93, 63, 211, 0.1)',
                fill: true,
                tension: 0.4,
                pointRadius: 4
            }]
        },
        options: { plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true } } }
    });

    new Chart(document.getElementById('categoryChart'), {
        type: 'bar',
        data: {
            labels: ['Electronics', 'Furniture', 'Stationery'],
            datasets: [{
                data: [100, 10, 125],
                backgroundColor: '#9d81f5',
                borderRadius: 6
            }]
        },
        options: { plugins: { legend: { display: false } } }
    });
</script>
</body>
</html>